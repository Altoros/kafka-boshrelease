#!/bin/bash
set -e -x

export JAVA_HOME=/var/vcap/packages/jdk
export PATH=$JAVA_HOME/bin:$PATH

export PIDFILE=/var/vcap/sys/run/kafka/kafka.pid
export KAFKA_OPTS=-Djava.security.auth.login.config=/var/vcap/jobs/kafka/config/kafka_server_jaas.conf

source /var/vcap/packages/common/utils.sh

case $1 in

  start)

    mkdir -p /var/vcap/store/kafka
    mkdir -p /var/vcap/sys/log/kafka
    mkdir -p /var/vcap/sys/run/kafka
    chown -H vcap:vcap /var/vcap/store/kafka
    chown -H vcap:vcap /var/vcap/sys/log/kafka
    chown -H vcap:vcap /var/vcap/sys/run/kafka
    chown -H -R vcap:vcap /var/vcap/packages/kafka

    cp /var/vcap/jobs/kafka/config/log4j.properties /var/vcap/packages/kafka/kafka/config
    cp /var/vcap/jobs/kafka/config/server.properties /var/vcap/packages/kafka/kafka/config

    exec chpst -u vcap:vcap /var/vcap/packages/kafka/kafka/bin/kafka-server-start.sh \
      /var/vcap/packages/kafka/kafka/config/server.properties &

    echo $! > ${PIDFILE}
    ;;

  stop)
    kill_and_wait ${PIDFILE}
    ;;
  *)
    echo "Usage: $0 {start|stop}"
    ;;

esac

exit 0

