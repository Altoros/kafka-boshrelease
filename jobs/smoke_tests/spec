---
name: smoke_tests

description: This job does not do anything except run an errand script.

templates:
  run.sh.erb: bin/run
  install_kafka.sh: bin/pre-start

packages:
-  python

consumes:
- name: kafka
  type: kafka

properties:
  errand.stdout:
    description: "Content to send to stdout"
    default: "stdout"
  errand.stderr:
    description: "Content to send to stderr"
    default: "stderr"
  errand.delay_secs:
    description: "Number of seconds to delay before exiting"
    default: 0
  errand.exit_code:
    description: "Exit code to return"
    default: 0
