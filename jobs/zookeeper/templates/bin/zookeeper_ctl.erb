#!/bin/bash
set -e -x

export JAVA_HOME=/var/vcap/packages/jdk
export PATH=$JAVA_HOME/bin:$PATH
export ZOO_LOG_DIR=/var/vcap/sys/logs/zookeeper

export PIDFILE=/var/vcap/sys/run/zookeeper/zookeeper.pid

export KAFKA_OPTS="-Djava.security.auth.login.config=/var/vcap/jobs/zookeeper/config/zookeeper_jaas.conf"

source /var/vcap/packages/common/utils.sh

case $1 in

  start)
    mkdir -p /var/vcap/store/zookeeper
    mkdir -p /var/vcap/sys/log/zookeeper
    mkdir -p /var/vcap/sys/run/zookeeper
    chown -H vcap:vcap /var/vcap/store/zookeeper
    chown -H vcap:vcap /var/vcap/sys/log/zookeeper
    chown -H vcap:vcap /var/vcap/sys/run/zookeeper
    chown -H -R vcap:vcap /var/vcap/packages/kafka

    cp /var/vcap/jobs/zookeeper/config/log4j.properties /var/vcap/packages/kafka/kafka/config
    cp /var/vcap/jobs/zookeeper/config/zookeeper.properties /var/vcap/packages/kafka/kafka/config

    echo <%= index + 1 %> > /var/vcap/store/zookeeper/myid
    chown -H vcap:vcap /var/vcap/store/zookeeper/myid

    exec chpst -u vcap:vcap /var/vcap/packages/kafka/kafka/bin/zookeeper-server-start.sh \
      /var/vcap/packages/kafka/kafka/config/zookeeper.properties &

    echo $! > ${PIDFILE}

    ;;

  stop)
    kill_and_wait ${PIDFILE}
    ;;
  *)
    echo "Usage: $0 {start|stop}"
    ;;

esac
exit 0
